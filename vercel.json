{
  "version": 2,
  "builds": [
    {
      "src": "backend/vercel_wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "backend/staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1" 
    },
    {
      "src": "/admin",
      "dest": "/backend/vercel_wsgi.py"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/backend/vercel_wsgi.py"
    },
    {
      "src": "/api",
      "dest": "/backend/vercel_wsgi.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/backend/vercel_wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "/backend/vercel_wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "asaasin_project.settings",
    "VERCEL_REGION": "fra1",
    "ALLOWED_HOSTS": ".vercel.app",
    "DEBUG": "False"
  },
  "regions": ["fra1"]
}
